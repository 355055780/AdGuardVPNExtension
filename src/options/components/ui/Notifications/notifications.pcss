.notifications {
    position: fixed;
    display: flex;
    justify-content: center;
    width: 100%;
    left: 0;
    bottom: 24px;
    flex-direction: column;
    align-items: center;
}

.notification {
    padding: 16px;
    border-radius: 4px;
    display: inline-flex;
    align-items: center;
    justify-content: space-between;
    width: 500px;
    background-color: var(--grayF3);
    margin-bottom: 16px;

    &:last-child {
        margin-bottom: 0;
    }

    &__message {
        font-size: 14px;
        max-width: 93%;
        color: var(--gray-base);
    }
}
