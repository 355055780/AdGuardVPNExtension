.social-icons {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: var(--greyf3);
    height: 60px;
    width: calc(100% + 48px);
    left: -24px;
    bottom: -25px;
    position: relative;
    padding: 0 15px;
    margin-top: auto;

    &__title {
        color: var(--gray-base);
        font-size: 14px;
        line-height: 22px;
    }

    &__item {
        display: inline-block;
        margin-right: 10px;

        &:last-child {
            margin-right: 0;
        }
    }
}
